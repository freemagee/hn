{% extends "base.html.twig" %}

{% block content %}
  {% if storiesList|length > 0 %}
  <ul class="m-0 p-0 list-none">
  {% set lastItem = false %}
  {% for item in storiesList %}
    {% if loop.last %}
        {% set lastItem = true %}
    {% endif %}

    {{ include("stories-list/item.html.twig") }}
  {% endfor %}
  </ul>
  {% endif %}

  {% if storiesList|length == 0 %}
    {{ include("stories-list/error.html") }}
  {% endif %}
{% endblock %}